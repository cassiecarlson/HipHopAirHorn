<LinearLayout
    android:id="@+id/main_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".AirHorn"
    android:background="@color/light_teal"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="Button to Swag"
        android:id="@+id/air_horn_button"
        android:src="@drawable/ic_afro_button"
        android:layout_width="325dp"
        android:layout_height="325dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="fill_horizontal">

        <ImageView
            android:id="@+id/speaker_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/speakers"
            android:layout_gravity="left"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/speaker_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/speakers"
            android:layout_gravity="right"
            />

        </LinearLayout>
</LinearLayout>
